<% if notice=="Thank you! We'll be in touch." %>
  <div id="success_notice">
    <%= notice %>
  </div>
<% elsif notice %>
  <div id="error_notice">
    <%= notice %>
  </div>
<% end %>

<header id="header">
  <div class="container">

    <div class="logo float-left">
      <%= image_tag "logo-black.png", height: '100' %>
    </div>

    <nav class="main-nav float-right d-none d-lg-block">
      <ul>
        <li><a href='/'>Home</a></li>
        <li><a href="about">About Us</a></li>
        <li class="active"><a href="berries">Our Berries</a></li>
        <li><a href="team">Our Team</a></li>
        <li><a href="contact">Contact Us</a></li>
      </ul>
    </nav>

  </div>
</header>

<div id="main">
  <section id="services" class="section-bg">
    <div class="container">

      <header class="section-header">
        <h3>Our Berries</h3>
      </header>

      <div class="row justify-content-center">

        <div class="col-md-9 row" id="berries">
          <% @berries.each do |berry| %>
            <div class="col-md-4 wow bounceInUp mt-5" data-wow-duration="1.4s">
              <div class="card">
                <%= image_tag berry.image_url, height: '230', class: "card-img-top" %>
                <div class="card-body">
                  <p class="card-text"><%= berry.title %></p>
                  <a href="<%=image_path(berry.image_url)%>" class="link-preview float-right" data-lightbox="fruit" data-title="Strawberries"
                    title="Preview" height="180px" width="180px"><i class="ion ion-eye"></i></a>
                    <%= button_to 'Add to Cart', line_items_path(berry_id: berry), remote: true, class: 'add-to-cart' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

          <div class="col-md-3 row mt-5 ml-1">
            <div id="cart">
              <% if @cart %>
                <%= render @cart %>
              <% end %>
            </div>
          </div>

      </div>
    </div>
  </section>
</div>

<footer id="footer" class="section-bg">
  <div class="container">
    <div class="copyright">
      &copy; Copyright <strong style="color: #c31c2d;"> Climgric</strong>. All Rights Reserved
    </div>
  </div>
</footer>

<a href="berries" class="back-to-top"><i class="fa fa-chevron-up"></i></a>