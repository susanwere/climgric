<% if @contact %>
  <div id="error_notice"><%= @first_key.to_s + " field " + @first_value[0] %></div>
<% end %>

<header id="header">
  <div class="container">

    <div class="logo float-left">
      <%= image_tag "logo-black.png", height: '100' %>
    </div>

    <nav class="main-nav float-right d-none d-lg-block">
      <ul>
        <li><a href='/'>Home</a></li>
        <li><a href="about">About Us</a></li>
        <li><a href="berries">Our Berries</a></li>
        <li><a href="team">Our Team</a></li>
        <li class="active"><a href="contact">Contact Us</a></li>
      </ul>
    </nav>

  </div>
</header>

<div id="main">
    <div class="container-contact100">
      <div class="wrap-contact100">
        <%= form_for(:contact, html: { multipart: true, name: 'update_form', novalidate: :novalidate, class: 'contact100-form validate-form'}) do |f| %>
          <span class="contact100-form-title">
            Send Us A Message
          </span>  
              <label class="label-input100" for="first-name">Enter your names *</label>
              <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
                <%= f.text_field :first_name, class: 'form-control, input100', id: 'first-name', placeholder: 'First name' %>
                <span class="focus-input100"></span>
              </div>
              <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type last name">
                <%= f.text_field :last_name, class: 'form-control, input100', id: 'last-name', placeholder: 'Last name' %>
                <span class="focus-input100"></span>
              </div>
            
    
            <label class="label-input100" for="email">Enter your email *</label>
            <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
              <%= f.text_field :email, class: 'form-control, input100', id: 'email', placeholder: 'example@email.com' %>
              <span class="focus-input100"></span>
            </div>
    
            <label class="label-input100" for="phone">Enter phone number</label>
            <div class="wrap-input100">
              <%= f.text_field :phone, class: 'form-control, input100', id: 'phone', placeholder: '+254 7********' %>
              <span class="focus-input100"></span>
            </div>
    
            <label class="label-input100" for="message">Message *</label>
            <div class="wrap-input100 validate-input" data-validate = "Message is required">
              <%= f.text_area :message, class: 'form-control, input100', id: 'message', placeholder: 'Write us a message' %>
              <span class="focus-input100"></span>
            </div>

            <div class="col-md-12 row">
              <% unless @cart.line_items.empty? %>
                <div class="container-contact100-form-btn col-md-6">
                  <button type="button" class="contact100-form-btn" data-toggle="modal" data-target="#exampleModalCenter">
                    Preview Cart
                  </button>
                </div>
              <% end %>
      
              <div class="container-contact100-form-btn col-md-6">
                <button class="contact100-form-btn">
                  Send Message
                </button>
              </div>
            </div>


            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLongTitle">Your Cart</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <table>
                      <%= render(@cart.line_items) %>
                    </table>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
  
        <div class="contact100-more flex-col-c-m" style="background-image: url(<%= asset_path 'contact.jpg' %>);">
          <div class="flex-w size1 p-b-47">
            <div class="txt1 p-r-25">
              <span class="lnr lnr-map-marker"></span>
            </div>
  
            <div class="flex-col size2">
              <span class="txt1 p-b-20">
                Address
              </span>
  
              <span class="txt2">
                Nairobi, Kenya
              </span>
            </div>
          </div>
  
          <div class="dis-flex size1 p-b-47">
            <div class="txt1 p-r-25">
              <span class="lnr lnr-phone-handset"></span>
            </div>
  
            <div class="flex-col size2">
              <span class="txt1 p-b-20">
                Lets Talk
              </span>
  
              <span class="txt3">
                +254 728 397 035
              </span>
            </div>
          </div>
  
          <div class="dis-flex size1 p-b-47">
            <div class="txt1 p-r-25">
              <span class="lnr lnr-envelope"></span>
            </div>
  
            <div class="flex-col size2">
              <span class="txt1 p-b-20">
                General Support
              </span>
  
              <span class="txt3">
                climgric@gmail.com
              </span>
            </div>
          </div>

          <div class="dis-flex size1 p-b-47">
            <div class="txt1 p-r-25">
              <span class="lnr lnr-envelope"></span>
            </div>
  
            <div class="flex-col size2">
              <span class="txt1 p-b-20">
                Social Links
              </span>
  
              <span class="txt3">
                <div class="social-links">
                  <!-- <a href="#" class="twitter"><i class="fa fa-twitter"></i></a> -->
                  <!-- <a href="#" class="facebook"><i class="fa fa-facebook"></i></a> -->
                  <a href="https://instagram.com/climgric" class="instagram"><i class="fa fa-instagram"></i></a>
                  <a href="https://www.youtube.com/channel/UCUTWvqWr2OgjMO-F1C22xOg" class="instagram"><i class="fa fa-youtube"></i></a>
                  <!-- <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a> -->
                </div>
              </span>
            </div>
        </div>
      </div>
    </div>


  </div>

  <footer id="footer" class="section-bg">
    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong style="color: #c31c2d;"> Climgric</strong>. All Rights Reserved
      </div>
    </div>
  </footer>
